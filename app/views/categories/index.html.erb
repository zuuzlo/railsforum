<h1>Categories</h1>
<div class="well span8">
<% @categories.each do |category| %>
  <p><%= category.name %> (<%= link_to 'Edit', edit_category_path(category.id) %> | 
    <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %>)</p>
<% end %><br />
<%= link_to 'Add Category', new_category_path, class: 'btn btn-small btn-success' %>
</div>
