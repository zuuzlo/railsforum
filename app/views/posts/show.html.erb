<h1><%= @post.title %></h1>
<p><strong>description</strong>: <%= @post.description %></p>
<p>url: <a href="<%= @post.url %>"><%= @post.url %></a></p>

<%= form_for [@post, @comment] do |f| %>
<%= f.label :body %>
<%= f.text_area :body, :size => "60x5" %>
<br />
<%= f.submit %>
<% end %>
<%= link_to 'Edit', edit_post_path(@post.id) %> |
<%= link_to 'Back', posts_path %>
