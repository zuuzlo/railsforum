<div class="row">
  <div class="span0 well">
    <%= link_to "vote up", vote_post_path(post, vote: true), method: 'post' %>
    <br>
    <%= post.total_votes %>
    <br>
    <%= link_to "vote down", vote_post_path(post, vote: false), method: 'post' %>
  </div>
  <div class="span8 well">
    <% post.categories.each do |category| %>
      <span class="label"><%= link_to category.name, category_path(category) %></span>
      <% end %>
      <h4><%= link_to post.title, fix_url(post.url) %></h4>
      <p>
        <%= post.description %>
      </p>
      <p>
        <span class="quiet">posted by</span> <%= link_to post.user.username, user_path(post.url) %>
        <small> at <%= display_datetime(post.created_at) %></small>
      </p>
      <small>
        <span>
          <%= link_to("#{post.comments.size} comments", post_path(post)) %>
        </span>
      </small>
  </div>
</div>